<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-warning">
        <div class="container">
            @Html.ActionLink("TECH FIX", "AdminLogin", "Home", new { area = "" }, new { @class = "nav-link text-black font--bold" }) <!-- Bold font -->
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-start">
                <ul class="navbar-nav ms-auto">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @Html.ActionLink("View Supplier details", "GetSuppliers", "Home", new { area = "" },
                            new { @class = "nav-link text-black font-weight-bold" }) <!-- Bold font applied -->
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("View Quotation and manage", "GetQuotation", new { area = "" },
                            new { @class = "nav-link text-black font-weight-bold" }) <!-- Bold font applied -->
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Request Inventories", "RequsetInventory", new { area = "" },
                            new { @class = "nav-link text-black font-weight-bold" }) <!-- Bold font applied -->
                        </li>
                    </ul>
            </div>

        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
