@model IEnumerable<TechCom.Models.Quotation>

@{
    ViewBag.Title = "GetQuotation";
}

<br />
<h2 class="navbar-text text-center" style="color: darkblue;">VIEW ALL QUOTATION DETAILS </h2>


<br />
<table class="table text-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuotationPrice)
            </th>
            <th>Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuotationPrice)
                </td>
    

                <td>
                    <a href="@Url.Action("AddOrder", new { id = item.QuoteID })" class="btn-order text-center"> Order</a>
                </td>

            </tr>
        }

    </table>


    <footer style="background-color: black; color: white; text-align: center; padding: 10px;">
        © 2024 - My ASP.NET Application
    </footer>

    <style>

        .table th {
            background-color: black;
            color: white; /* Ensure the text is readable */
            text-align: center;
            padding: 10px;
        }

        .btn-order {
            background-color: darkgreen;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 4px;
            text-decoration: none;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
    </style>
