@model IEnumerable<TechCom.Models.Supplier>

@{
    ViewBag.Title = "GetSuppliers";
}

<br />
<h2 class="navbar-text text-center" style="color: forestgreen;">TECH FIX SUPPLIERS DETAILS</h2>


<br />
<table class="table text-center">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SupplierID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactInfo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a href="@Url.Action("DeleteSuppliers", new { id = item.SupplierID })" class="btn-delete text-center">Delete</a>
            </td>
        </tr>
    }

</table>

<footer style="background-color: black; color: white; text-align: center; padding: 10px;">
    © 2024 - My ASP.NET Application
</footer>

<style>

    .table th {
        background-color: black;
        color: white; /* Ensure the text is readable */
        text-align: center;
        padding: 10px;
    }

    .btn-delete {
        background-color: red;
        color: white;
        padding: 5px 10px;
        border: none;
        border-radius: 4px;
        text-decoration: none;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }
</style>