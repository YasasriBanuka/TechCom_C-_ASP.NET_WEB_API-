@model IEnumerable<TechCom.Models.Quotation>

@{
    ViewBag.Title = "GetQuotations";
}

<br />
<h2 class="text-center text text-green"> ADD NEW QUOTATIONS </h2>

<style>
    /* Style for buttons */
    .btn-create {
        background-color: blue;
        color: white;
        padding: 5px 10px;
        border: none;
        border-radius: 4px;
        text-decoration: none;
    }

    .btn-edit {
        background-color: darkgreen;
        color: white;
        padding: 5px 10px;
        border: none;
        border-radius: 4px;
        text-decoration: none;
    }

    .btn-delete {
        background-color: darkred;
        color: white;
        padding: 5px 10px;
        border: none;
        border-radius: 4px;
        text-decoration: none;
    }

    /* Style for table */
    .table {
        width: 100%;
        border-collapse: collapse;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

        .table th {
            background-color: black;
            color: white; /* Ensure the text is readable */
            text-align: center;
            padding: 10px;
        }

        .table td {
            text-align: center;
            padding: 10px;
        }
</style>

<br />
<p>
    <a href="@Url.Action("AddQuotation")" class="btn-create">Add New Quotation for TechFix</a>
</p>
<br />
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.QuoteID)</th>
        <th>@Html.DisplayNameFor(model => model.Description)</th>
        <th>@Html.DisplayNameFor(model => model.QuotationPrice)</th>
        <th>@Html.DisplayNameFor(model => model.QuotaQuantity)</th>
        <th>@Html.DisplayNameFor(model => model.OverAllDiscount)</th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.QuoteID)</td>
            <td>@Html.DisplayFor(modelItem => item.Description)</td>
            <td>@Html.DisplayFor(modelItem => item.QuotationPrice)</td>
            <td>@Html.DisplayFor(modelItem => item.QuotaQuantity)</td>
            <td>@Html.DisplayFor(modelItem => item.OverAllDiscount)</td>
            <td>
                <a href="@Url.Action("UpdateQuotation", new { id = item.QuoteID })" class="btn-edit">Update</a>
                <br /> <br />
                <a href="@Url.Action("DeleteQuotation", new { id = item.QuoteID })" class="btn-delete">Delete</a>
            </td>
        </tr>
    }
</table>

<!-- Footer Section -->
<footer style="background-color: black; color: white; text-align: center; padding: 10px;">
    © 2024 - My ASP.NET Application
</footer>
